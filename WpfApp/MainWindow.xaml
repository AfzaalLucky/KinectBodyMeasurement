<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:TestWinRTProject.Controls"
        Title="MainWindow" Height="768" Width="1366">

  <!-- NB: critical in this XAML file that the BodiesDisplayControl
       sizes itself to be the same size as the video control which
       sizes itself automatically.
  -->
  <Grid x:Name="rootGrid"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Width="Auto"
        Height="Auto"
        Background="Silver">
    <controls:VideoControl UseInfrared="false" />
    <controls:BodiesDisplayControl UseInfrared="false" />
  </Grid>
</Window>
